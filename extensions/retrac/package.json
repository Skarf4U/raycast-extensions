{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "retrac",
  "title": "Retrac",
  "description": "Retrac is an inventory manager for business owner. This extension allows you to create and retrieve your items directly inside Raycast.",
  "icon": "command-icon.png",
  "author": "quuu",
  "categories": [
    "Productivity",
    "Developer Tools",
    "Data",
    "Applications",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "add-item",
      "title": "Add Item",
      "subtitle": "Add a new item to your inventory.",
      "description": "Add a new item to your inventory on Retrac.",
      "mode": "view",
      "arguments": [
        {
          "name": "sku",
          "placeholder": "SKU",
          "type": "text"
        },
        {
          "name": "description",
          "placeholder": "Description",
          "type": "text"
        },
        {
          "name": "cost",
          "placeholder": "Cost",
          "type": "text"
        }
      ]
    },
    {
      "name": "search-items",
      "title": "Search Items",
      "subtitle": "Browse items in your inventory",
      "description": "Browse items in your inventory on Retrac.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.61.2",
    "axios": "^1.6.2",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3"
  },
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "required": true,
      "title": "API Key",
      "description": "Retrac API key."
    },
    {
      "name": "projectSlug",
      "type": "textfield",
      "required": true,
      "title": "Workspace Slug",
      "description": "Retrac workspace slug.",
      "placeholder": "workspace-slug"
    }
  ],
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
